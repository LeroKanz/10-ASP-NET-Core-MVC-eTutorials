@model Author

@{
    ViewData["Title"] = "Delete Author";
}

<div class="raw text">
    <div class="cil-md-8 offset-2">
        <p>
            <h1>Delete confirmation for @Model.FullName</h1>
        </p>
        <div class="raw">
            <div class="col-md-8 offset-1">

                <div class="form-group text-center">
                    <img id="LogoPreview" />
                </div>

                <div class="form-group">
                    <label asp-for="LogoUrl" class="control-label"></label>
                    <input asp-for="LogoUrl" class="form-control" readonly />
                    <span asp-validation-for="LogoUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Experience" class="control-label"></label>
                    <input asp-for="Experience" class="form-control" readonly />
                    <span asp-validation-for="Experience" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Authors">Show All</a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $(LogoPreview).val();
        })
    </script>
}
